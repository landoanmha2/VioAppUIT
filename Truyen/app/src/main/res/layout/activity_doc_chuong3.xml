<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Activity.DocChuongActivity3">
    <RelativeLayout
        android:background="#FAEECB"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarchuong"
            android:background="#7C7C7C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.appcompat.widget.Toolbar>
        <ImageView
            android:id="@+id/imageViewSetting"
            android:layout_marginLeft="350dp"
            android:src="@drawable/ic_settings"
            android:layout_width="50dp"
            android:layout_height="50dp">
        </ImageView>

        <TextView
            android:id="@+id/textviewnoidungchuong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbarchuong"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text="Alo lại là lân đây"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="normal"></TextView>
    </RelativeLayout>
</ScrollView>