<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp">
    <RelativeLayout
        android:background="@drawable/custom_loginout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <TextView
            android:background="@drawable/custom_loginout"
            android:text="Long Thần Giáng Thế"
            android:id="@+id/textviewtentruyenbinhluan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:background="@drawable/custom_loginout"
            android:layout_below="@id/textviewtentruyenbinhluan"
            android:lines="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewnoidungbinhluan"
            android:text="Alo lại là Lân đây, yoyo let's go"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#000000"
            android:layout_marginTop="2dp">
        </TextView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>